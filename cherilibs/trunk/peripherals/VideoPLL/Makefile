VERILOGDEST=../qsys_ip/VideoPLL
SRC=video_pll_reconfig.v video_pll_reconfig_bb.v video_pll_reconfig.qip

all: $(VERILOGDEST)

.PHONY:	megawizard

$(VERILOGDEST): megawizard
	mkdir -p $(VERILOGDEST)
	cp $(SRC) $(VERILOGDEST)

megawizard:
	cp video_pll.v.template video_pll.v
	qmegawiz -silent module=altpll video_pll.v
	cp video_pll_reconfig.v.template video_pll_reconfig.v
	qmegawiz -silent module=altpll_reconfig video_pll_reconfig.v

clean:
	rm -f  *~
	rm -fr  *.v *.mif *.qip *.ppf
	rm -rf $(VERILOGDEST)
